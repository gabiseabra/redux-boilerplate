{
	"extends": [
		"stylelint-config-standard",
		"stylelint-config-css-modules"
	],
	"rules": {
		"indentation": "tab",
		"number-leading-zero": "never",
		"at-rule-no-unknown": [ true, { "ignoreAtRules": [ "global-import" ] } ],
		"rule-empty-line-before": [
			"always",
			{
				"except": [
					"first-nested",
					"inside-block-and-after-rule"
				]
			}
		]
	}
}
